<div class="modal-body">
  <%= form_for(@dog, remote: true) do |f| %>
    <% if @dog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@dog.errors.count, "error") %> prohibited this dog from being saved:</h2>

        <ul>
        <% @dog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control", placeholder: "Fido" %>
    </div>
    <div class="field form-group">
      <%= f.label :owner_id %><br>
      <%= f.collection_select :owner_id, Owner.order("last_name, first_name"), :id, :last_first, {prompt: "Select an owner"}, {class: "form-control"} %>
    </div>
    <div class="field form-group">
      <%= f.label :breed_id %><br>
      <%= f.collection_select :breed_id, Breed.order("breed"), :id, :breed, {prompt: "Select a breed"}, {class: "form-control"} %>
    </div>
    <div class="field form-group">
      <%= f.label :dob %><br>
      <%= f.date_select :dob, {:order => [:month, :day, :year], :start_year => 2015, :end_year => 1995, :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' }}, class: "form-control date-select" %>
    </div>
    <div class="field form-group">
      <%= f.label :vet %><br>
      <%= f.text_field :vet, class: "form-control", placeholder: "Animal Hospital" %>
    </div>
    <div class="field form-group">
      <%= f.label :vet_phone %><br>
      <%= f.text_field :vet_phone, class: "form-control", placeholder: "504-555-1212" %>
    </div>
    <div class="field form-group">
      <%= f.check_box :in_daycare, class: "checkbox-inline" %> <%= f.label :in_daycare %>
    </div>
    <div class="field form-group">
      <%= f.label :avatar %><br>
      <%= f.file_field :avatar %>
    </div>
    <div class="actions modal-footer">
      <%= f.submit class: "btn btn-success" %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  <% end %>
</div>
